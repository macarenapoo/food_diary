<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation" class="message error">
        <h2>Oops! We found <%= pluralize(@entry.errors.count, "error") %></h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date, {:order=>[:day, :month, :year], :class=>"input-lg form-control"} %>
  </div>
  <div class="field">
    <%= f.label :time, 'Time:' %>
    <%= f.time_select :time %>
  </div>
  <div class="field">
    <%= f.label :food %><br>
    <%= f.text_area :food %>
  </div>
  <div class="field">
    <%= f.label :situation %><br>
    <%= f.text_area :situation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
